@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix v-fs: <http://semantic-machines.com/veda/veda-search/> .
@prefix v-s: <http://semantic-machines.com/veda/veda-schema/> .
@prefix v-ui: <http://semantic-machines.com/veda/veda-ui/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix d: <http://semantic-machines.com/veda/veda-data/> .
@prefix td: <http://semantic-machines.com/veda/test-data/> .

<http://semantic-machines.com/veda/veda-schema-Site>
  rdf:type owl:Ontology ;
  rdfs:label "Veda system ontology. Site"@en ;
  rdfs:label "Онтология системы Veda. Сайт"@ru ;
#  owl:versionInfo "1.3" ;
  v-s:loadPriority 10 ;
.

### CLASSES ####

v-s:RegistrationRequest
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:SystemThing ;
  rdfs:label "Registration request"@en ;
  rdfs:label "Запрос на регистрацию"@ru ;
  v-ui:hasTemplate v-s:RegistrationRequestTemplate ;
.

v-s:Site
  rdf:type owl:Class ;
  rdfs:subClassOf owl:Thing ;
  rdfs:label "Сайт"@ru ;
  rdfs:label "Site"@en ;
.

v-s:Page
  rdf:type owl:Class ;
  rdfs:subClassOf owl:Thing ;
  rdfs:label "Страница"@ru ;
  rdfs:label "Page"@en ;
.

v-s:Section
  rdf:type owl:Class ;
  rdfs:subClassOf owl:Thing ;
  rdfs:label "Раздел"@ru ;
  rdfs:label "Section"@en ;
.

v-s:Article
  rdf:type owl:Class ;
  rdfs:subClassOf owl:Thing ;
  rdfs:label "Статья"@ru ;
  rdfs:label "Article"@en ;
.

v-s:Comment
  rdf:type owl:Class ;
  rdfs:subClassOf owl:Thing ;
  rdfs:label "Комментарий"@ru ;
  rdfs:label "Comment"@en ;
.

v-s:Category
  rdf:type owl:Class ;
  rdfs:subClassOf owl:Thing ;
  rdfs:label "Категория"@ru ;
  rdfs:label "Category"@en ;
.

### PROPERTIES ###

v-s:url
  rdf:type owl:DatatypeProperty ;
  rdfs:domain v-s:Site ;
  rdfs:label "URL" ;
  rdfs:range xsd:string ;
.

v-s:hasSection
  rdf:type owl:ObjectProperty ;
  rdfs:domain v-s:Article ;
  rdfs:label "Section"@en ;
  rdfs:label "Раздел"@ru ;
  rdfs:range v-s:Section ;
.

v-s:hasCategory
  rdf:type owl:ObjectProperty ;
  rdfs:domain v-s:Article ;
  rdfs:label "Category"@en ;
  rdfs:label "Категория"@ru ;
  rdfs:range v-s:Category ;
.

site:hasArticle
  rdf:type owl:ObjectProperty ;
  rdfs:domain v-s:Section ;
  rdfs:label "article"@en ;
  rdfs:label "статья"@ru ;
  rdfs:range v-s:Article ;
.

v-s:heading
  rdf:type owl:DatatypeProperty ;
  rdfs:domain v-s:Article ;
  rdfs:label "Heading"@en ;
  rdfs:label "Заголовок"@ru ;
  rdfs:range xsd:string ;
.

v-s:summary
  rdf:type owl:DatatypeProperty ;
  rdfs:domain v-s:Article ;
  rdfs:label "Summary"@en ;
  rdfs:label "Резюме"@ru ;
  rdfs:range xsd:string ;
.

### TEMPLATES ###

v-s:RegistrationRequestTemplate
  rdf:type v-ui:ClassTemplate ;
  rdfs:label "Registration request template" ;
  rdfs:label "Шаблон запроса на регистрацию"@ru ;
  v-ui:template """
<div>
  <h3 about="@" rel="rdf:type" data-template="v-ui:LabelTemplate"></h3>

  <em about="v-s:lastName" property="rdfs:label"></em>
  <div property="v-s:lastName" class="view -edit -search"></div>
  <veda-control property="v-s:lastName" data-type="string" class="-view edit search"></veda-control>

  <em about="v-s:firstName" property="rdfs:label"></em>
  <div property="v-s:firstName" class="view -edit -search"></div>
  <veda-control property="v-s:firstName" data-type="string" class="-view edit search"></veda-control>

  <em about="v-s:middleName" property="rdfs:label"></em>
  <div property="v-s:middleName" class="view -edit -search"></div>
  <veda-control property="v-s:middleName" data-type="string" class="-view edit search"></veda-control>

  <br>
  <button class="btn btn-success btn-lg btn-block action" id="save" about="v-s:Send" property="rdfs:label"></button>
  <br>
  <span class="text-muted" about="@" property="@"></span>
</div>
  """ ;
.

### SECURITY ###

v-s:SiteAdmin
  rdf:type v-s:Group ;
  rdfs:label "Группа администраторов сайта"@ru ;
  rdfs:label "Site admin group"@en ;
.

v-s:SiteAdminPermission
  rdf:type v-s:PermissionStatement ;
  rdfs:label "Полномочия группы администраторов сайта"@ru ;
  rdfs:label "Site admin group permissions"@en ;
  v-s:permissionSubject v-s:SiteAdmin ;
  v-s:permissionObject v-s:Page, v-s:Section, v-s:Article, v-s:Category, v-s:Comment ;
  v-s:permissionObject v-s:Page_group, v-s:Section_group, v-s:Article_group, v-s:Category_group ;
  v-s:canCreate "true"^^xsd:boolean ;
  v-s:canRead "true"^^xsd:boolean ;
  v-s:canUpdate "true"^^xsd:boolean ;
  v-s:canDelete "true"^^xsd:boolean ;
.
