### APPLICATIONS TEMPLATES ####

site:ApplicationsMainTemplate
  rdf:type v-ui:ClassTemplate ;
  rdfs:label "Шаблон страницы приложений"@ru ;
  rdfs:label "Applications page template"@en ;
  v-ui:template """
<div class="container-fluid bg-white">
  <div class="container">
    <br>
    <br>
    <h1 about="site:ApplicationsMainSlogan1" style="line-height: 1; color: #333;">
      <span>
        <span property="rdfs:label"></span>
        <br>
        <small property="rdfs:comment" style="color: #333;"></small>
      </span>
    </h1>
    <div class="row">
      <div class="col-md-10">
        <div about="@" rel="v-s:hasImage" data-template="v-ui:ImageTemplate"></div>
      </div>
    </div>
    <h1 about="site:ApplicationsMainSlogan2" style="line-height: 1; color: #333;">
      <small property="rdfs:comment" style="color: #333;"></small>
    </h1>
    <a href="#/@" class="btn btn-lg btn-primary">
      <span about="site:More" property="rdfs:label"></span>
    </a>
    <br>
    <br>
    <br>
    <br>
  </div>
</div>
  """ ;
.

