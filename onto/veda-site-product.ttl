<http://semantic-machines.com/veda/veda-site-product>
  rdf:type owl:Ontology ;
  rdfs:label "Veda site. Product page"@en ;
  rdfs:label "Сайт Veda. Страница о продукте"@ru ;
#  owl:versionInfo "1.3" ;
  v-s:loadPriority 10 ;
.

### PRODUCT PAGE ###

site:Product
  rdf:type site:Page ;
  rdfs:label "Продукт"@ru ;
  rdfs:label "Product"@en ;
  v-ui:hasCustomTemplate site:ProductTemplate ;
  site:hasPage site:Platform ;
  site:hasPage site:Solutions ;
  site:hasPage site:Advantages ;
  site:hasPage site:Documentation ;
  site:hasPage site:Demo ;
.

### PRODUCT PAGE TEMPLATE ####

site:ProductTemplate
  rdf:type v-ui:ClassTemplate ;
  rdfs:label "Шаблон страницы продукта"@ru ;
  rdfs:label "Product page template"@en ;
  v-ui:template """
<div class="page container sheet">
  <div class="row">
    <div class="col-md-2 col-sm-4">
      <ul class="list-group" rel="site:hasPage">
        <a class="list-group-item" about="@" property="rdfs:label" href="#/@"></a>
      </ul>
    </div>
    <div class="col-md-10 col-sm-8">
      Содержание
    </div>
  </div>
</div>
  """ ;
.

site:Platform
  rdf:type site:Page ;
  rdfs:label "Платформа"@ru ;
  rdfs:label "Platform"@en ;
.

site:Solutions
  rdf:type site:Page ;
  rdfs:label "Решения"@ru ;
  rdfs:label "Solutions"@en ;
.

site:Advantages
  rdf:type site:Page ;
  rdfs:label "Преимущества"@ru ;
  rdfs:label "Advantages"@en ;
.

site:Documentation
  rdf:type site:Page ;
  rdfs:label "Документация"@ru ;
  rdfs:label "Documentation"@en ;
.

site:Demo
  rdf:type site:Page ;
  rdfs:label "Демо"@ru ;
  rdfs:label "Demo"@en ;
.
